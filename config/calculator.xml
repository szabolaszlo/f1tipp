<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="App\Calculator\Registry" id="app.calculator.registry"/>

        <service class="App\Calculator\Calculator" id="App\Calculator\Calculator">
            <argument id="app.calculator.registry" type="service"/>
            <argument id="doctrine.orm.default_entity_manager" type="service"/>
        </service>

        <service class="App\Calculator\Type\BetResultCalculator" id="app.calculator.type.bet_result_calculator">
            <argument id="doctrine.orm.entity_manager" type="service"/>
            <argument id="app.rule.rule_registry" type="service"/>
            <tag name="app.calculator_type"/>
        </service>

    </services>

</container>
