{% autoescape true %}
<script type="text/javascript">
    var {{id}}_days = {{remainTime.days}};
    var {{id}}_hours = {{remainTime.h}};
    var {{id}}_minutes = {{remainTime.i}};
    var {{id}}_seconds = {{remainTime.s}};
    var {{id}}_invert = {{remainTime.invert}};

    function setCountDown_{{id}}() {
        {{id}}_seconds--;
        if ({{id}}_seconds < 0) {
            {{id}}_minutes--;
            {{id}}_seconds = 59;
        }
        if ({{id}}_minutes < 0) {
            {{id}}_hours--;
            {{id}}_minutes = 59;
        }
        if ({{id}}_hours < 0) {
            {{id}}_days--;
            {{id}}_hours = 23;
        }
        if ({{id}}_days >= 0 && {{id}}_invert != 1) {
            document.getElementById("{{id}}_counter").innerHTML =
                    {{id}}_days + "n " + {{id}}_hours + "ó " + {{id}}_minutes + "p " + {{id}}_seconds + "mp";
        } else {
            document.getElementById("{{id}}_counter").innerHTML = "Lejárt a Tippelési időszak!";
        }
        setTimeout("setCountDown_{{id}}()", 1000);
    }
    setCountDown_{{id}}();
</script>
{% endautoescape %}