<!DOCTYPE html>
<html lang="hu">
{% block head %}
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>F1 Tipp</title>
        <link rel="shortcut icon" type="image/png" href="{{ asset('build/images/favicon.ico') }}"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('main') }}
        {% endblock %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        <style>
            body {
                padding-top: 70px; /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
                background-image: url('{{ asset('build/images/background.jpg') }}');
                background-size: contain;
                background-attachment: fixed;
            }
        </style>
    </head>
{% endblock %}
<body>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('main') }}
{% endblock %}

{% block navigation %}
<div id="navigation"></div>
{% endblock %}

<!-- Page Content -->
<div class="container-fluid">

    <div class="row">

        <!-- Content Column -->
        <div class="col-1 col-lg-1 col-md-1"></div>
        <div class="col-7 col-lg-7 col-md-7">
            {% block body %}{% endblock %}
            <div class="visible-lg visible-md visible-sm">
                <div id="news"></div>
            </div>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-3 col-lg-3 col-md-3">
            {{ countDownExtension() }}
            <div class="reload-able-module"
                 data-module-route="trophies"
                 data-module-entities='{"0": "trophies"}'
                 data-module-count="-1">
                {{ trophyExtension() }}
            </div>
            <div class="reload-able-module"
                 data-module-route="user_championship"
                 data-module-entities='{"0": "results"}'
                 data-module-count="-1">
                {{ userChampionshipTableExtension() }}
            </div>
            {{ prizeDrawExtension(app.user ? 1 : 0) }}
            {{ pointCalculatingInfoExtension(app.user ? 1 : 0) }}

            <div class="visible-xs">
                <div id="news-on-mobile"></div>
            </div>
            {{ render_hinclude(controller('App\\Controller\\Module\\ResultsOfChampionshipController::indexAction'), {default: 'Loading ..'}) }}
        </div>
        <div class="col-1 col-lg-1 col-md-1"></div>
    </div>
    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p class="color-two">{{ 'app_creator'|trans }}</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->

</body>

</html>
